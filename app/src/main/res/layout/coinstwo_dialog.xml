<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:background="@color/textred"
    android:orientation="vertical"
    tools:context="com.pankajranag.rana_gaming.Activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_corners"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/patua_one"
                android:gravity="center"
                android:text="Coins Entry"
                android:textColor="#FFF"
                android:textSize="12dp" />
        </LinearLayout>
        <!--        <RelativeLayout-->
        <!--            android:layout_width="50dp"-->
        <!--            android:layout_height="50dp"-->
        <!--            android:layout_alignParentRight="true"-->
        <!--            android:layout_marginTop="0dp"-->
        <!--            android:layout_marginRight="0dp">-->

        <!--            <View-->
        <!--                android:id="@+id/anim1"-->
        <!--                style="@style/bc_card_anim" />-->

        <!--            <View-->
        <!--                android:id="@+id/anim2"-->
        <!--                style="@style/bc_card_anim" />-->

        <!--            <View-->
        <!--                android:id="@+id/anim3"-->
        <!--                style="@style/bc_card_anim" />-->

        <!--            <View-->
        <!--                android:id="@+id/anim4"-->
        <!--                style="@style/bc_card_anim"-->
        <!--                android:layout_width="13dp"-->
        <!--                android:layout_height="14dp" />-->
        <ImageView
            android:id="@+id/about"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/help"
            android:visibility="gone" />
        <!--        </RelativeLayout>-->


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/text_border"
        android:orientation="vertical">

        <EditText
            android:id="@+id/pubg_name_dialog"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@android:drawable/screen_background_light_transparent"
            android:fontFamily="@font/patua_one"
            android:hint="PUBG Lite Name"
            android:maxLength="15"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/no_cheakstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_description"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:padding="1px"
        android:textColor="#fff"
        android:visibility="gone"
        android:weightSum="2">


        <EditText
            android:id="@+id/edt_mobileno"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/text_border"
            android:fontFamily="@font/patua_one"
            android:hint="Enter mobile no."
            android:inputType="number"
            android:maxLength="10"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="15sp"
            android:visibility="gone" />


        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/text_border"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/patua_one"
            android:freezesText="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="5dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="cheak status"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/pubg_id_dialog"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/text_border"
        android:fontFamily="@font/patua_one"
        android:gravity="center"
        android:maxLength="15"
        android:maxLines="1"
        android:text="PUBG Id"
        android:textColor="@color/textcolorr"
        android:visibility="gone" />

    <TextView
        android:id="@+id/dialog_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/patua_one"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/dialog"
        android:textSize="12dp" />

    <CheckBox
        android:id="@+id/checkbox_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/patua_one"
        android:text="I Agree All With Terms And Condition"
        android:textColor="@color/dialog"
        android:textSize="12dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/patua_one"
            android:gravity="center"
            android:text="CANCEL"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp" />

        <Button
            android:id="@+id/join_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_button"
            android:enabled="false"
            android:fontFamily="@font/patua_one"
            android:gravity="center"
            android:text="JOIN"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp" />

    </LinearLayout>
</LinearLayout>
