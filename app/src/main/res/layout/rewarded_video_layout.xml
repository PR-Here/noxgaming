<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/dback"
    android:orientation="vertical"
    tools:context="com.pankajranag.rana_gaming.Activity.MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_corners"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/patua_one"
                android:gravity="center"
                android:text="Enter User Detail"
                android:textColor="#FFF"
                android:textSize="13dp" />
        </LinearLayout>
        <!--        <RelativeLayout-->
        <!--            android:layout_width="50dp"-->
        <!--            android:layout_height="50dp"-->
        <!--            android:layout_alignParentRight="true"-->
        <!--            android:layout_marginTop="0dp"-->
        <!--            android:layout_marginRight="0dp">-->

        <!--            <View-->
        <!--                android:id="@+id/anim1"-->
        <!--                style="@style/bc_card_anim" />-->

        <!--            <View-->
        <!--                android:id="@+id/anim2"-->
        <!--                style="@style/bc_card_anim" />-->

        <!--            <View-->
        <!--                android:id="@+id/anim3"-->
        <!--                style="@style/bc_card_anim" />-->

        <!--            <View-->
        <!--                android:id="@+id/anim4"-->
        <!--                style="@style/bc_card_anim"-->
        <!--                android:layout_width="13dp"-->
        <!--                android:layout_height="14dp" />-->
        <ImageView
            android:id="@+id/about"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/help"
            android:visibility="gone" />
        <!--        </RelativeLayout>-->


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"

        android:orientation="vertical">

        <EditText
            android:id="@+id/mobileno_dialog_coins"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/edittext_border"
            android:fontFamily="@font/patua_one"
            android:hint="Mobile No."
            android:inputType="number"
            android:maxLength="10"
            android:paddingLeft="15dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/patua_one"
                android:hint="name  : "
                android:textColor="@android:color/holo_red_dark"
                android:textColorHint="@android:color/holo_red_dark"
                android:textSize="11dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/name_dialog_transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/patua_one"
                android:gravity="center"
                android:hint="nox"
                android:textColor="@android:color/holo_red_dark"
                android:textColorHint="@android:color/holo_red_dark"
                android:textSize="11dp"
                android:visibility="gone" />

        </LinearLayout>

        <EditText
            android:id="@+id/confirmmobileno_dialog_coins"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_border"
            android:fontFamily="@font/patua_one"
            android:hint="Confirm Mobile No."
            android:inputType="number"
            android:maxLength="10"
            android:paddingLeft="15dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/coins_dialog_coins"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_border"
            android:drawableStart="@drawable/wallet"
            android:drawablePadding="10dp"
            android:fontFamily="@font/patua_one"
            android:hint="Enter Coins"
            android:inputType="number"
            android:maxLength="4"
            android:paddingLeft="15dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/patua_one"

                android:hint="Your Total Coins : "
                android:textColor="@android:color/holo_red_dark"
                android:textColorHint="@android:color/holo_red_dark"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/total_coins_dialog_transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/patua_one"
                android:gravity="center"
                android:hint="0"
                android:textColor="@android:color/holo_red_dark"
                android:textColorHint="@android:color/holo_red_dark"

                android:textSize="11dp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/patua_one"
            android:gravity="center"
            android:text="CANCEL"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp" />

        <Button
            android:id="@+id/cancel_button2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/patua_one"
            android:gravity="center"
            android:text="send"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp" />

    </LinearLayout>
</LinearLayout>
