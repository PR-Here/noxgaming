<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowActionBarOverlay">true</item>
                
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="navigation" parent="Widget.MaterialComponents.NavigationView">

        <item name="itemBackground">@android:color/holo_red_dark</item>

    </style>

    <style name="ProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/slide_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>

    <style name="TextAppearance.AppTheme.TextInputLayout.HintTextAlt" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Widget.AppTheme.TextInputLayoutList" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.AppTheme.TextInputLayout.HintTextAlt
        </item>
        <item name="boxStrokeColor">@android:color/white</item>

    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#f4511e</item>
        <item name="android:progressTint">#388e3c</item>
        <item name="android:colorControlActivated">#c51162</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="bc_card_anim">//kdf
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/circle_animation</item>
    </style>

    <style name="uperdialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    //toast
    <style name="AllStyles">
        <item name="stStrokeWidth">2dp</item>
        <item name="stStrokeColor">#00FFFF</item>
        <item name="stColorBackground">#000</item>
        <item name="stRadius">12dp</item>
        <item name="stFont">@font/patua_one</item>
        <item name="stTextSize">18sp</item>
        <item name="stTextColor">#ff0</item>
        <item name="stTextBold">true</item>
        <item name="stSolidBackground">true</item>
        <item name="stIconStart">@drawable/ic_autorenew_white_24dp</item>
        <item name="stIconEnd">@drawable/ic_autorenew_white_24dp</item>
        <item name="stLength">SHORT</item>
    </style>

    <style name="BaseStyleableToast">
        <item name="stLength">SHORT</item>
    </style>

    <style name="ColoredStroke" parent="BaseStyleableToast">
        <item name="stStrokeWidth">2dp</item>
        <item name="stStrokeColor">#0162cd</item>
    </style>

    <style name="ColoredBackground" parent="BaseStyleableToast">
        <item name="stColorBackground">#0162cd</item>
    </style>

    <style name="ColoredText" parent="BaseStyleableToast">
        <item name="stTextColor">#0162cd</item>
    </style>

    <style name="ColoredBoldText" parent="BaseStyleableToast">
        <item name="stTextColor">#0162cd</item>
        <item name="stTextBold">true</item>
    </style>

    <style name="CustomFont" parent="BaseStyleableToast">
        <item name="stFont">@font/patua_one</item>
    </style>

    <style name="CornerRadius5Dp" parent="BaseStyleableToast">
        <item name="stRadius">5dp</item>
    </style>

    <style name="IconStart" parent="BaseStyleableToast">
        <item name="stIconStart">@drawable/ic_autorenew_white_24dp</item>
    </style>

    <style name="IconEnd" parent="BaseStyleableToast">
        <item name="stIconEnd">@drawable/ic_autorenew_white_24dp</item>
    </style>

    <style name="IconStartEnd" parent="BaseStyleableToast">
        <item name="stIconStart">@drawable/ic_autorenew_white_24dp</item>
        <item name="stIconEnd">@drawable/ic_autorenew_white_24dp</item>
    </style>


    <style name="Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="SubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">3</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/sub_title_size</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="ButtonColored" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/medium_size</item>
        <item name="android:paddingEnd">@dimen/medium_size</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:text">@string/title_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
